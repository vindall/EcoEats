<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".search_final">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cream"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10sp"
            android:layout_marginVertical="5sp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/search_bar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/blue"
                android:gravity="center_vertical"
                android:hint="Search..."
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#000000"
                android:textSize="50px"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp"
                tools:text="Search..." />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/filter_icon"
                tools:layout_editor_absoluteX="350dp"
                tools:layout_editor_absoluteY="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10sp"
            android:layout_marginVertical="5sp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/button3"
                android:layout_width="212dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/locationfilter"
                tools:layout_editor_absoluteX="18dp"
                tools:layout_editor_absoluteY="67dp" />

            <ImageButton
                android:id="@+id/button4"
                android:layout_width="157dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/rangefilter"
                tools:layout_editor_absoluteX="236dp"
                tools:layout_editor_absoluteY="67dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10sp"
            android:layout_marginVertical="5sp"
            android:text="Restaurant"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10sp"
            android:layout_marginVertical="5sp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="179dp"
                android:layout_height="118dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/res_pic1"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="189dp" />

            <ImageButton
                android:id="@+id/resPic"
                android:layout_width="179dp"
                android:layout_height="118dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/res_pic2"
                tools:layout_editor_absoluteX="217dp"
                tools:layout_editor_absoluteY="189dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10sp"
            android:layout_marginVertical="5sp"
            android:text="Voucher"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10sp"
            android:layout_marginVertical="5sp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/voucherPic"
                android:layout_width="179dp"
                android:layout_height="118dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/vouc_pic1"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="359dp" />

            <ImageButton
                android:id="@+id/voucherPic3"
                android:layout_width="179dp"
                android:layout_height="118dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/vouc_pic2"
                tools:layout_editor_absoluteX="217dp"
                tools:layout_editor_absoluteY="359dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10sp"
            android:layout_marginVertical="5sp"
            android:text="Order Again"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10sp"
            android:layout_marginVertical="5sp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/orderPic"
                android:layout_width="179dp"
                android:layout_height="118dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/order_pic1"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="529dp" />

            <ImageButton
                android:id="@+id/orderPic3"
                android:layout_width="179dp"
                android:layout_height="118dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/order_pic1"
                tools:layout_editor_absoluteX="217dp"
                tools:layout_editor_absoluteY="529dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:background="@color/cream"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:outlineAmbientShadowColor="#000000"
        android:outlineSpotShadowColor="#000000"
        android:paddingLeft="25sp"
        android:paddingRight="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:id="@+id/home_group"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/home" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home" />
        </LinearLayout>

        <View
            android:id="@+id/view5"
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/order_group"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/order" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Orders" />
        </LinearLayout>

        <View
            android:id="@+id/view8"
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/history_group"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/clock" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="History" />
        </LinearLayout>

        <View
            android:id="@+id/view9"
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/profile_group"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/user" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>