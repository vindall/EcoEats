<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDF6EE">

    <EditText
        android:id="@+id/search_bar"
        android:layout_width="329dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="50px"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        tools:text="Search..." />

    <ImageButton
        android:id="@+id/button"
        android:layout_width="212dp"
        android:layout_height="36dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/locationfilter"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="67dp" />

    <ImageButton
        android:id="@+id/button2"
        android:layout_width="157dp"
        android:layout_height="38dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/rangefilter"
        tools:layout_editor_absoluteX="236dp"
        tools:layout_editor_absoluteY="67dp" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="43dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/filter_icon"
        tools:layout_editor_absoluteX="350dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/resText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurant"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="60px"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="149dp" />

    <ImageButton
        android:layout_width="179dp"
        android:layout_height="118dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/res_pic1"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="189dp" />

    <ImageButton
        android:id="@+id/resPic2"
        android:layout_width="179dp"
        android:layout_height="118dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/res_pic2"
        tools:layout_editor_absoluteX="217dp"
        tools:layout_editor_absoluteY="189dp" />

    <TextView
        android:id="@+id/voucherText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voucher"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="60px"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="319dp" />

    <ImageButton
        android:id="@+id/voucherPic1"
        android:layout_width="179dp"
        android:layout_height="118dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/vouc_pic1"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="359dp" />

    <ImageButton
        android:id="@+id/voucherPic2"
        android:layout_width="179dp"
        android:layout_height="118dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/vouc_pic2"
        tools:layout_editor_absoluteX="217dp"
        tools:layout_editor_absoluteY="359dp" />

    <TextView
        android:id="@+id/orderAgainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Again"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="60px"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="489dp" />

    <ImageButton
        android:id="@+id/orderPic1"
        android:layout_width="179dp"
        android:layout_height="118dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/order_pic1"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="529dp" />

    <ImageButton
        android:id="@+id/orderPic2"
        android:layout_width="179dp"
        android:layout_height="118dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/order_pic1"
        tools:layout_editor_absoluteX="217dp"
        tools:layout_editor_absoluteY="529dp" />

    <LinearLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:elevation="200dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:outlineAmbientShadowColor="#000000"
        android:outlineSpotShadowColor="#000000"
        android:paddingLeft="25sp"
        android:paddingRight="25sp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/home_group"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/home" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home" />
        </LinearLayout>

        <View
            android:id="@+id/view5"
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/order_group"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/order" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Orders" />
        </LinearLayout>

        <View
            android:id="@+id/view8"
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/history_group"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/clock" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="History" />
        </LinearLayout>

        <View
            android:id="@+id/view9"
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/profile_group"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/user" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile" />

        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>